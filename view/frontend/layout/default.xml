<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		
		<!-- Add custom search block to the correct container -->
		<referenceContainer name="header-wrapper">
			<!-- Remove the original -->
			
		
			<!-- Inject your version right before the minicart -->
			<referenceBlock name="top.search">
				<action method="setTemplate">
					<argument name="template" xsi:type="string">Compiled_CustomSearch::search.phtml</argument>
				</action>
			</referenceBlock>
		</referenceContainer>
	</body>
</page>